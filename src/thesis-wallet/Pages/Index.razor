                    }
                }
            } catch (Exception) {
                Menu.Component.Toaster.Add($"Error when sending the transaction {Form.FuncBind} to blockchain.", MatToastType.Danger, "Smart contract/Blockchain Transaction Error");
                return;
            }
            Menu.LoadFormData(Menu.SelectedNode);
        }
