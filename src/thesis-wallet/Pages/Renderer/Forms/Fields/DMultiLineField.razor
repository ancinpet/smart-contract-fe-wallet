

@if (!String.IsNullOrEmpty(field.Description)) {
    <MatTextField @bind-Value="field.Data" Label="@field.Label" ReadOnly="@field.ReadOnly" Outlined="true" TextArea="true" Style=@("min-width:90%;min-height:" + ((field != null && field.Data != null) ? Math.Ceiling(1.75 * (double)field.Data.Split(Environment.NewLine).Length + 1) : "5") + "em;")></MatTextField>
    <MatTooltip Tooltip="@field.Description">
        <div @ref="context.Current" style="display:inline-block;">
            <MatIcon Style="font-size:2.2em;vertical-align:middle;">help_outline</MatIcon>
        </div>
    </MatTooltip>
} else {
    <MatTextField @bind-Value="field.Data" Label="@field.Label" ReadOnly="@field.ReadOnly" Outlined="true" TextArea="true" Style=@("min-width:100%;min-height:" + ((field != null && field.Data != null) ? Math.Min((1.75 * field.Data.Split(Environment.NewLine).Length) + 5, 30) : "5") + "em;")></MatTextField>
}

@code {
    [CascadingParameter]
    Form form { get; set; }
    [CascadingParameter]
    FieldGroup group { get; set; }
    [CascadingParameter]
    MultiLineField field { get; set; }
}